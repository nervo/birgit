{% extends 'BirgitFrontBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/front/task/task.css') }}" rel="stylesheet">
    <style>
        .link {
            fill: none;
            stroke: #666;
            stroke-width: 1.5px;
        }
        .link.predecessor {
            stroke-dasharray: 0,2 1;
        }
        circle {
            fill: #ccc;
            stroke: #333;
            stroke-width: 1.5px;
        }
        text {
            font: 10px sans-serif;
            pointer-events: none;
            text-shadow: 0 1px 0 #fff, 1px 0 0 #fff, 0 -1px 0 #fff, -1px 0 0 #fff;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/front/task/task.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}

    <h1>Tasks</h1>

    <div id="content"></div>

{% endblock %}
