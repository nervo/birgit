<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <!-- Project Handler -->
        <parameter key="birgit.project_handler.git.class">Birgit\Core\Project\Handler\Git\GitProjectHandler</parameter>

    </parameters>

    <services>

        <!-- Project Handler -->
        <service id="birgit.project_handler.git" public="false" class="%birgit.project_handler.git.class%">
            <tag name="birgit.project_handler" />
        </service>

    </services>

</container>
