<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <!-- Task Queue Type -->
        <parameter key="birgit.task_queue_type.cron.class">Birgit\Extra\Cron\Task\Queue\Type\CronTaskQueueType</parameter>
        <parameter key="birgit.task_queue_type.project_cron.class">Birgit\Extra\Cron\Task\Queue\Type\ProjectCronTaskQueueType</parameter>
        <parameter key="birgit.task_queue_type.project_reference_cron.class">Birgit\Extra\Cron\Task\Queue\Type\ProjectReferenceCronTaskQueueType</parameter>

    </parameters>

    <services>
        <!-- Task Queue Type -->
        <service id="birgit.task_queue_type.cron" public="false" class="%birgit.task_queue_type.cron.class%">
            <argument type="service" id="birgit.model_repository_manager" />
            <argument type="service" id="birgit.project_manager" />
            <tag name="birgit.task_queue_type" />
        </service>
        <service id="birgit.task_queue_type.project_cron" public="false" class="%birgit.task_queue_type.project_cron.class%">
            <argument type="service" id="birgit.model_repository_manager" />
            <argument type="service" id="birgit.project_manager" />
            <tag name="birgit.task_queue_type" />
        </service>
        <service id="birgit.task_queue_type.project_reference_cron" public="false" class="%birgit.task_queue_type.project_reference_cron.class%">
            <argument type="service" id="birgit.model_repository_manager" />
            <argument type="service" id="birgit.project_manager" />
            <tag name="birgit.task_queue_type" />
        </service>
    </services>

</container>
