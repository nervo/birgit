<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <!-- Model - Manager -->
        <parameter key="birgit.model_manager.doctrine_orm.class">Birgit\Bundle\DoctrineBundle\Entity\EntityManager</parameter>
    
    </parameters>
    
    <services>
        
        <!-- Model - Manager -->
        <service id="birgit.model_manager" alias="birgit.model_manager.doctrine_orm" />
        
        <service id="birgit.model_manager.doctrine_orm" public="false" class="%birgit.model_manager.doctrine_orm.class%">
            <argument type="service" id="doctrine" />
        </service>

    </services>

</container>
